@using ECommerce.Web.Areas.Admin.Helpers
@model ECommerce.Web.Areas.Admin.Models.Promocao

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Novo</h2>

@using (Html.BeginForm("Create", "Promotions", FormMethod.Post, new { enctype = "multipart/form-data", id = "formPromotion" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Promoção</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.EditFor(model => model.Codigo)
        @Html.EditFor(model => model.Descricao)
        @Html.InputFileFor(model => model.Imagem, null, true, false)
        @Html.EnumDropDownList(model => model.TipoExibicao)
        @Html.EditFor(model => model.TodosItens)
        @Html.EnumDropDownList(model => model.TipoValor)
        @Html.EditFor(model => model.Valor)
        @Html.DatePickerFor(model => model.DataInicial, null)
        @Html.DatePickerFor(model => model.HoraInicial, null)
        @Html.DatePickerFor(model => model.DataFinal, null)
        @Html.DatePickerFor(model => model.HoraFinal, null)
        @Html.EditFor(model => model.NovosUsuarios)
        @Html.EditFor(model => model.Publicar)
        @Html.EditFor(model => model.Ativo)
    </div>
    <div class="row" id="promotionItem">
        @{
            Html.RenderPartial("PromotionItems", Model?.PromocaoItems);
        }
    </div>
    <div class="row">
        @Html.Button(TypeHtmlButton.Submit, new { value = "Salvar", @class = "btn btn-primary" })
    </div>
            }
<div class="row">
    @Html.ActionLink("Voltar a lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}